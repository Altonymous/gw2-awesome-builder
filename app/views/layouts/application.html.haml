!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Gw2 Awesome Builder"
      %meta{:content => content_for?(:description) ? yield(:description) : "Gw2 Awesome Builder", :name => "description"}
        = stylesheet_link_tag "http://code.jquery.com/ui/1.9.1/themes/base/jquery-ui.css"
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    = render "shared/header"
    #main{:role => "main"}
      = yield
    %footer
  / ! end of #container
