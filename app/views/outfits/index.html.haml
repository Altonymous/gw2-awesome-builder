
%h1 Listing Outfits

%table#ex1
  %thead
    %tr.sliders
      %th=stat_slider("Armor")
      %th=stat_slider("Attack Power")
      %th=stat_slider("Hit Points")
      %th=stat_slider("Healing Power")
      %th=stat_slider("Condition Damage")
      %th=stat_slider("Critical Damage")
      %th=stat_slider("Critical Chance")
      %th=stat_slider("Condition Duration")
      %th=stat_slider("Boon Duration")
      %th.nosort


  - @outfits.each do |outfit|
    %tr
      %td= outfit.armor
      %td= outfit.attack_power
      %td= outfit.hit_points
      %td= outfit.healing_power
      %td= outfit.condition_damage
      %td= outfit.critical_damage
      %td= outfit.critical_chance
      %td= outfit.condition_duration
      %td= outfit.boon_duration
      %td= link_to 'Show', outfit

%br

= paginate @outfits

%br
:javascript
  $(function() {
    $.each($(".slider-range" ), function(e) {

      $(this).slider({
        orientation: "vertical",
        range: true,
        values: [ 17, 67 ],
        slide: function( event, ui ) {
          var name = $(this).data("name");
          $(".slider-amount #slider-" + name).text( ui.values[ 0 ] + " - " + ui.values[ 1 ] );
        }
      });

    });
    $(".slider-range").each(function() {
      var name = $(this).data("name");
      var rangeIndicator = $(".slider-amount #slider-" + name);
      rangeIndicator.text($(this).slider("values", 0) + " - " + $(this).slider("values", 1))
    })

    $('#ex1').sorttable({items: '>:not(.nosort)', placeholder: 'placeholder'});

  });

