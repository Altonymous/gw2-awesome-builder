= form_for @trinket do |f|
  - if @trinket.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trinket.errors.count, "error")} prohibited this trinket from being saved:"
      %ul
        - @trinket.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :slot
    = f.number_field :slot
  .field
    = f.label :level
    = f.number_field :level
  .field
    = f.label :gear_enhancements
    = f.text_field :gear_enhancements
  .field
    = f.label :enhancements
    = f.text_field :enhancements
  .actions
    = f.submit 'Save'
